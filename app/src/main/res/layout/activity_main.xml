<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljube.bajtaktarov.quiz.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Choose Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pointsMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Points 0" />

    <Button
        android:id="@+id/newGameMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pointsMainText"
        android:layout_alignBottom="@+id/pointsMainText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="New Game"
        android:textAllCaps="false" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pointsMainText"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="42dp">

        <Button
            android:id="@+id/capitalCityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="19dp"
            android:text="Capital Cities"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/fcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="46dp"
            android:text="Football Clubs"
            android:textAllCaps="false"
            android:layout_alignBaseline="@+id/capitalCityButton"
            android:layout_alignBottom="@+id/capitalCityButton"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/moviesDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fcButton"
            android:layout_below="@+id/fcButton"
            android:layout_marginTop="36dp"
            android:text="Movie Directors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/MountainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/capitalCityButton"
            android:layout_alignTop="@+id/moviesDirector"
            android:text="Mountains"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/HighScoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:text="High Scores"
            android:textAllCaps="false" />

    </RelativeLayout>

    <Button
        android:id="@+id/AddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pointsMainText"
        android:layout_alignBottom="@+id/pointsMainText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:text="Submit Data"
        android:textAllCaps="false" />


</RelativeLayout>
